			<div type="retro-verso">
				<pb n="2" xml:id="LL1.13_I_fol_1rv" facs="#LL1.13_I_folio_1rv"/>
				<div type="letter-body" n="t_01">
					<ab type="parag" n="ab_03">
					<hi rend="align(center) case(mixed)">
						<s type="sentence" n="s_03">
							
							<lb xml:id="LL1.13_I_lb_1rv_01" n="1" facs="#LL1.13_I_line_1rv_01"/>
							Io d’ora innanzi mi dichiaro a Lei<ptr target="#LL1_13_I_note-1" /> 
							<w> rico
								<lb xml:id="LL1.13_I_lb_1rv_02" n="2" facs="#LL1.13_I_line_1rv_02" break="no" rend="double stroke"/>
								noscente
							</w>
							per tutto quello che Ella<ptr target="#LL1_13_I_note-1" /> potrà 
							<lb xml:id="LL1.13_I_lb_1rv_03" n="3" facs="#LL1.13_I_line_1rv_03"/>
							<subst instant="true" resp="#EG"><del rend="overstrike" hand="#VB" seq="1">giovarmi</del><add place="supralinear" hand="#VB" seq="2">concorrere</add></subst><pc type="comma">,</pc> perché io colga gloria sul 
							<lb xml:id="LL1.13_I_lb_1rv_04" n="4" facs="#LL1.13_I_line_1rv_04"/>
							suolo della mia Patria<pc type="dot">.</pc>
						</s>
						<s type="sentece" n="s_04">
							<lb xml:id="LL1.13_I_lb_1rv_05" n="5" facs="#LL1.13_I_line_1rv_05"/>
							Gradisca le proteste della m<damage extent="1 character"><hi facs="#LL1.13_I_hotspot_1rv_02">i</hi></damage>a sincera stima
						</s>
					</hi>
					</ab>
				</div>
